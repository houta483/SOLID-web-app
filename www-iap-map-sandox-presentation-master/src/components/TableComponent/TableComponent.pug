.tableComponent.flex.justify-center
    table.table-auto.max-w-full
      thead
        tr
          th.px-4.py-2(v-for="col in columns")
            span {{ col }}
      tbody
        tr(v-for="(row, index) in data" :key="index")
          td.border.px-4.py-2(v-for="(col in columns") 
            span(v-if="col === 'Actions'")
              a.mr-10(
                class="text-teal-600 py-2 px-4 block whitespace-no-wrap cursor-pointer"
                @click="editAction(row, index)"
              ) Edit
              a.mr-10(
                class="text-teal-600 py-2 px-4 block whitespace-no-wrap cursor-pointer"
                v-on:click="deleteAction(row.id, index)"
              ) Delete
            span(v-else) {{ row[col] }}